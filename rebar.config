{rrp_protect, true}.
{minimum_otp_vsn, "18"}.

% Adding 'debug_info' in a profile overrides 'no_debug_info'.
{erl_opts, [
    no_debug_info,
    warn_bif_clash,
    warn_deprecated_function,
    warn_deprecated_type,
    warn_export_all,
    warn_export_vars,
    warn_missing_spec_all,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_untyped_record,
    warn_unused_function,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,
    warnings_as_errors
]}.

{profiles, [

    %% Default profile when built as a dependency (plugin).
    {prod, [
        {erl_opts, [
            no_auto_import,
            {d, 'RRP_PROD'}
        ]}
    ]},

    %% For Dialyzer and Xref.
    {check, [
        {erl_opts, [
            debug_info,
            no_auto_import,
            {d, 'RRP_CHECK'}
        ]},

        {dialyzer, [
            {warnings, [
                error_handling,
                race_conditions,
                unknown,
                unmatched_returns
            ]},
            {plt_extra_apps, [
                certifi,
                getopt,
                providers,
                public_key,
                rebar,
                ssl_verify_fun
            ]}
        ]},

        {xref_checks, [
            deprecated_function_calls,
            deprecated_functions,
            locals_not_used,
            undefined_function_calls,
            undefined_functions
        ]},

        % For efficiency in production use, we only have a dependency on rebar
        % itself in this profile.
        % Normally, we eschew undeclared transitive dependencies, which are
        % inherently evil, but in this case we explicitly want only that which
        % comes along with Rebar3, as that's our runtime environment.
        {deps, [
            {rebar,
                {git, "https://github.com/erlang/rebar3.git",
                {branch, "master"} }}
        ]},

        {overrides, [
            % At present, need this for OTP-20.
            {add, relx,             [{erl_opts, [nowarn_export_all]}]},

            {add, certifi,          [{erl_opts, [debug_info]}]},
            {add, getopt,           [{erl_opts, [debug_info]}]},
            {add, providers,        [{erl_opts, [debug_info]}]},
            {add, rebar,            [{erl_opts, [debug_info]}]},
            {add, ssl_verify_fun,   [{erl_opts, [debug_info]}]}
        ]}
    ]},

    %% Default profile when building docs.
    {docs, [
        {edoc_opts, [
            {app_default,   "http://www.erlang.org/doc/man"},
            {preprocess,    true},
            {macros,        [{'EDOC', true}, {'RRP_DOCS', true}]}
        ]}
    ]},

    %% Default profile when running EUnit or Common Test.
    {test, [
        {erl_opts, [
            debug_info,
            nowarn_deprecated_function,
            nowarn_deprecated_type,
            nowarn_export_all,
            nowarn_missing_spec,
            nowarn_missing_spec_all,
            nowarn_unused_function,
            {d, 'RRP_TEST'}
        ]},
        {cover_enabled, true}
    ]},

    %% Source analysis only, no beams produced.
    {validate, [
        {erl_opts, [
            no_auto_import,
            strong_validation,
            {d, 'RRP_VALIDATE'}
        ]}
    ]}
]}.

{rrp_upstream, [
    {upstream, {git, "https://github.com/basho/basho_rebar_tools.git"}},
    {mirror, upstream, master},
    {mirror, upstream, develop}
]}.
